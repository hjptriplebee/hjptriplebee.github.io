// Custom styles.


// 主页文章添加阴影效果
 .post {
   margin-top: 60px;
   margin-bottom: 0px;
   padding: 25px;
   //-webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
   -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
  }

.posts-expand .post {
    margin-top: 40px;
	border-bottom: 1.5px solid rgba(202, 150, 203,0.5);
}

// 页面顶部行高
.header {
    line-height: 1.5;
    background-image: linear-gradient(90deg, #F79533 0%, #F37055 15%, #EF4E7B 30%, #A166AB 44%, #5073B8 58%, #1098AD 72%, #07B39B 86%, #6DBA82 100%);
	border-bottom: 8px solid #AAA;
}

// 背景
.container {
    background: url(https://raw.githubusercontent.com/hjptriplebee/gitment/master/background.jpg);
    background-attachment: fixed;
    background-position: 50% 50%;
    background-size: cover;
    background-repeat: no-repeat;
}

// 去掉图片边框
.posts-expand .post-body img {
    border: none;
    padding: 0px;
}
.post-body p a {
    border-bottom: 0px solid #0593d3;
}

// [Read More]按钮样式
.post-button .btn {
    color: #555 !important;
    background-color: rgb(255, 255, 255);
    border-radius: 3px;
    font-size: 15px;
    box-shadow: inset 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
    border: none !important;
    transition-property: unset;
    padding: 0px 15px;
}
.post-button .btn:hover {
    color: rgb(255, 255, 255) !important;
    border-radius: 3px;
    font-size: 15px;
    box-shadow: inset 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
    background-image: linear-gradient(90deg, #a166ab 0%, #ef4e7b 25%, #f37055 50%, #ef4e7b 75%, #a166ab 100%);
}
// 页脚
.footer {
    line-height: 1.5;
    background-color: rgba(255, 255, 255, 0.75);
    color: #333;
    border-top-width: 3px;
    border-top-style: solid;
    border-top-color: rgb(161, 102, 171);
    box-shadow: 0px -10px 10px 0px rgba(0, 0, 0, 0.15);
}

// 文章底部的tags
.posts-expand .post-tags a {
    border-bottom: none;
    margin-right: 0px;
    font-size: 13px;
    padding: 0px 5px;
    border-radius: 3px;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
}
.posts-expand .post-tags a:hover {
    background: #eee;
}
.posts-expand .post-tags a {
    background: transparent;
}

//li
li {
    color: rgb(180, 180, 180)
}

// 文章底部页面跳转
.post-nav-item a {
    color: #0593d3;
    font-weight: bold;
}
.post-nav-item a:hover {
    color: rgb(161, 102, 171);
    font-weight: bold;
}
.post-nav {
    border-top: 0px solid #eee;
}

// 超链接样式
a {
    color: rgb(80, 115, 184);
    border-bottom-color: rgb(80, 115, 184);
}
a:hover {
    color: rgb(161, 102, 171);
    border-bottom-color: rgb(161, 102, 171);
}

// 文章内标题样式（左边的竖线）
.post-body h2, h3, h4, h5, h6 {
    border-left: 4px solid rgb(161, 102, 171);
    margin-left: -6px;
    padding-left: 17px;
}
.posts-expand .post-body h2, .posts-expand .post-body h3, .posts-expand .post-body h4, .posts-expand .post-body h5, .posts-expand .post-body h6 {
    color: rgb(200, 200, 200);
}

.posts-expand .post-title-link {
    color: #CCC;
}
.posts-expand .post-title-link:hover {
    color: rgb(161,102,171);
}

// 左下角返回顶部按钮样式
.back-to-top {
    line-height: 1.5;
    left: 10px;
    padding-right: 5px;
    padding-left: 5px;
    padding-top: 2.5px;
    padding-bottom: 2.5px;
    background-color: rgba(247, 149, 51, 0.75);
    border-radius: 5px;
    box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.35);
}
.back-to-top.back-to-top-on {
    bottom: 10px;
}

.sidebar-toggle {
	background-color: rgba(247, 149, 51, 0.75);
    left: 10px;
	border-radius: 5px;
}

.page-post-detail .sidebar-toggle-line {
    background: rgb(255, 255, 255);
}


// 侧栏
.sidebar {
    box-shadow: inset 0px 0px 10px 3px rgba(100, 100, 100, 0.4);
    background: url(https://raw.githubusercontent.com/hjptriplebee/gitment/master/background.jpg);
    background-attachment: fixed;
    background-position: 50% 50%;
    background-size: cover;
    background-repeat: no-repeat;;
}

.sidebar-inner {
    margin-top: 30px;
}

// 侧栏顶部文字
.sidebar-nav li {
    font-size: 15px;
    font-weight: bold;
    color: rgb(7, 179, 155);
}
.sidebar-nav li:hover {
    color: rgb(161, 102, 171);
}
.sidebar-nav .sidebar-nav-active {
    color: rgb(7, 179, 155);
    border-bottom-color: rgb(161, 102, 171);
    border-bottom-width: 1.5px;
}
.sidebar-nav .sidebar-nav-active:hover {
    color: rgb(7, 179, 155);
}

// 大标题
.site-meta .site-title {
    font-size: 27px;
    color: #eee;
}
.logo-line-before i, .logo-line-after i {
    background: none;
}

// 侧栏站点概况行高
.site-overview {
    line-height: 1.3;
}

// 侧栏站点描述
.site-author-name {
    margin-left: 12px;
	margin: 15px 0 0;
//	color: rgba(247, 149, 51, 0.75);
}
.site-author-image {
    border: 0px;
    margin-top: 16px;
    box-shadow: 0px 0px 32px 0px rgba(255, 255, 255, 0.8);
	padding: 0px;
	background: url(/uploads/author.jpg)
}

.site-author-image-new:hover {
    box-shadow: 0px 0px 52px 0px rgba(255, 255, 255, 0.8);
	content: url(/uploads/author2.jpg)
}

.site-author-image-new {
  display: block;
  margin: 0 auto;
